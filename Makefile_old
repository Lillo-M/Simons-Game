#Compilador
CC = g++
#Nome do diretorio para os *.o
ODIR=obj
#*.o necessarios para a compilacao
_OBJ = Game.o Ground.o EventsManager.o Player.o PlayerInputManager.o Entity.o CollisionManager.o \
	   main.o Enemy.o Warrior.o Being.o Character.o GraphicManager.o Obstacle.o Level.o Alaska.o Animation.o \
	   Projectile.o State.o StateMachine.o Observer.o InputManager.o EntityList.o Archer.o Arrow.o Button.o\
	   PlayerProjectile.o Menu.o MainMenu.o MenuObserver.o PauseMenu.o LoadGameState.o Lava.o SimpleAnimation.o\
	   ComplexAnimation.o SimpleSprite.o Horse.o Ice.o LeaderBoard.o GameOverState.o TextInputObserver.o\
	   NewGameMenu.o Vulcano.o Math.o Skull.o
	   
	   
	   
#Setando diretorio
OBJ = $(patsubst %,$(ODIR)/%,$(_OBJ))
#diretorio de include
IDIR = -Iinclude/Defines -Iinclude -Iinclude/Entities -Iinclude/Entities/Characters -Iinclude/Entities/Characters/Enemies -Iinclude/Managers -Iinclude/Math
#includes ------------------------- Colocar diretorio da bilioteca SFML -----------------------------------
CFLAGS= $(IDIR) -IC:/SFML-2.5.1/include
#diretorio das libraries usadas
#includes ------------------------- Colocar diretorio da bilioteca SFML -----------------------------------
LDIR =-LC:/SFML-2.5.1/lib
#libraries usadas
LIBS=-lsfml-graphics-s -lsfml-window-s -lsfml-system -lopengl32 -lfreetype -lwinmm -lgdi32 -mwindows -DSFML_STATIC




Jogo: $(OBJ) 
	$(CC) obj/*.o -o Jogo $(LDIR) $(LIBS)
	@echo '===================================COMPILE COMPLETE==========================================='
	@echo ''

$(ODIR)/main.o: src/main.cpp
	$(CC) -c -o $@ $< $(CFLAGS) 

$(ODIR)/Game.o: src/Game.cpp include/Game.h
	if test -d obj; then echo ; else mkdir obj; fi
	@echo '======================================COMPILING==============================================='
	$(CC) -c -o $@ $< $(CFLAGS) 

